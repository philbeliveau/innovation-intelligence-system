OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=anthropic/claude-sonnet-4.5

# Server Configuration
PORT=8000
HOST=0.0.0.0

# CORS Configuration (comma-separated list of additional allowed origins)
# Used for Vercel preview deployments - add specific URLs as needed
ALLOWED_ORIGINS=

# Vercel Blob (for downloading PDFs from frontend)
VERCEL_BLOB_READ_WRITE_TOKEN=vercel_blob_rw_FdT3gMiQrtfo2aCZ_xI5LU5CRc4bjQnnL6epgxjDdgROHic

# Optional: Log Level
LOG_LEVEL=INFO

# Webhook Configuration (for pipeline completion callback)
# Frontend webhook URL - where to send completion notifications
